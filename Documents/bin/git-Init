#!/bin/sh
set -eu

die () {
    echo "$@"
    exit 1
}

usage () {
    die "Usage: $0 repo_name"
}

[ "$#" = "1" ] || usage
reponame="$1"
# shellcheck disable=SC2029
ssh cgit.shore.co.il "git init --bare /srv/git/$reponame"
git clone "cgit.shore.co.il:/srv/git/$reponame"
(
cd "$reponame"
git commit --allow-empty --message "Initial empty commit."
git push
)
